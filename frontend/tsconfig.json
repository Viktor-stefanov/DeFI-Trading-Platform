{
  "compilerOptions": {
    "target": "ESNext", // Modern JS output
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Browser + ESNext APIs
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Enable all strict type checks
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true, // Required for Vite + TSX
    "noEmit": true, // Vite handles output
    "jsx": "react-jsx", // âœ… JSX support (React 17+)
    "types": ["vite/client"] // Vite type definitions
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json", "composite": true }]
}
